<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dh.ms.mapper.SysUserMapper">

    <resultMap id="BaseResultMap" type="com.dh.ms.pojo.entity.SysUser">
            <id property="id" column="id" jdbcType="VARCHAR"/>
            <result property="username" column="username" jdbcType="VARCHAR"/>
            <result property="nickname" column="nickname" jdbcType="VARCHAR"/>
            <result property="gender" column="gender" jdbcType="TINYINT"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="deptId" column="dept_id" jdbcType="INTEGER"/>
            <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
            <result property="mobile" column="mobile" jdbcType="VARCHAR"/>
            <result property="status" column="status" jdbcType="TINYINT"/>
            <result property="email" column="email" jdbcType="VARCHAR"/>
            <result property="deleted" column="deleted" jdbcType="TINYINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,username,nickname,
        gender,password,dept_id,
        avatar,mobile,status,
        email,deleted,create_time,
        update_time
    </sql>

    <!-- 用户认证信息映射 -->
    <resultMap id="UserAuthMap" type="com.dh.ms.pojo.bo.UserAuthInfo">
        <id property="userId" column="id" jdbcType="BIGINT"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="nickname" column="nickname" jdbcType="VARCHAR"/>
        <result property="deptId" column="dept_id" jdbcType="INTEGER"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
        <result property="roleId" column="role_id" jdbcType="TINYINT"/>
    </resultMap>

    <!-- 根据用户名获取认证信息 -->
    <select id="getUserAuthInfo" resultType="com.dh.ms.pojo.bo.UserAuthInfo">
        SELECT
            t1.id userId,
            t1.username username,
            t1.nickname nickname,
            t1.dept_id deptId,
            t1.`password` password,
            t1.`status` status,
            t3.`id` as role_id
        FROM
            `sys_user` t1
                LEFT JOIN `sys_user_role` t2 ON t2.user_id = t1.id
                LEFT JOIN `sys_role` t3 ON t3.id = t2.role_id
        WHERE
            t1.username = #{username} AND t1.deleted=0
    </select>
</mapper>
